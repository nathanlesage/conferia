{
  "compilerOptions": {
    "target": "ES2015",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "lib": ["es5", "dom"],
    "allowJs": true,
    "sourceMap": true,
    "strict": true,  
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "rootDir": "./src"
  },
  "include": ["./src/**/*.ts"]
}
